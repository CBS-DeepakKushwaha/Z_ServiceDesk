
@{
    ViewBag.Title = "AddVendor";
    Layout = "~/Views/Shared/_Layout_Add.cshtml";
}

<!-- Sweet Alert -->
<link href="../plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
<link href="../plugins/animate/animate.css" rel="stylesheet" type="text/css">



<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
             
            </div>
            <h4 class="page-title">NEW VENDOR</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2 pull-right">
                    <div class="col-md-12 text-lg-right">
                        <button class="btn btn-gradient-primary" id="btnSubmit">Submit</button>
                        <button class="btn btn-gradient-danger" type="button" onclick="location.href='/VendorManagement/Index'">Cancel</button>
                    </div>
                </div>
                <br />
                <h5></h5>
                <br />
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Vendor Code<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtSupplierCode" value="">
                                <ul class="parsley-errors-list filled" id="SpnSupplierCode" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Vendor Name<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtSupplierName" value="">
                                <ul class="parsley-errors-list filled" id="SpnSupplierName" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Contact Person<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtContactPerson">
                                <ul class="parsley-errors-list filled" id="SpnContactPerson" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Contact Number<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtPhoneNumber" maxlength="10" required pattern="[0-9]+">
                                <ul class="parsley-errors-list filled" id="SpnPhoneNumber" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Email Address<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="txtEmail" id="txtEmail" maxlength="100" required>
                                <ul class="parsley-errors-list filled" id="SpnEmail" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">City<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtCity">
                                <ul class="parsley-errors-list filled" id="SpnCity" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Address</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtAddress">
                                <ul class="parsley-errors-list filled" id="SpnAddress" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Vendor Category<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="select form-control select2" id="ddlSupplierCategory" name="Suppliercategory">
                                    <option value="0">Select</option>
                                </select>
                                <ul class="parsley-errors-list filled" id="SpnSupplierCategory" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Vendor Status<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="select form-control select2" id="ddlSupllierStatus" required>
                                    <option value="0">Select</option>
                                </select>
                                <ul class="parsley-errors-list filled" id="SpnSupllierStatus" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
              
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">GSTNumber<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="txtGSTNumber" maxlength="100">
                            <ul class="parsley-errors-list filled" id="Spngstnumber" style="display:none">
                                <li class="parsley-required">This field is required</li>
                            </ul>
                        </div>
                    </div><!-- end col -->
                </div>
            </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Service Category<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="select select2-multiple form-control select2" multiple id="ddlSupllierService" required>
                                    <option value="0">Select</option>
                                </select>
                                <ul class="parsley-errors-list filled" id="SpnServiceCategory" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col-md-12">
                        <label for="txtname" class="col-form-label">Notes</label>
                        <textarea style="min-height: 160px !important;height:92px !important;background-color:aliceblue;" required="" id="txtNotes" class="form-control"></textarea>
                    </div>
                </div>
                @*<div class="row">
                    <div class="col-md-4 text-lg-right">
                        <button class="btn btn-gradient-primary" id="btnSubmit" type="submit">Submit</button>
                        <button class="btn btn-gradient-danger" type="button">Cancel</button>
                    </div>
                </div>*@
            </div><!--end card-body-->
        </div>
        <!--end card--> <!--end card-body--> <!--end card-->
    </div><!--end col-->
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<!-- Sweet-Alert  -->
<script src="../plugins/sweet-alert2/sweetalert2.min.js"></script>
<script src="../assets/pages/jquery.sweet-alert.init.js"></script>
<script src="~/Scripts/View/Common/WebConfig.js"></script>
<script src="~/Scripts/View/Common/Common.js"></script>
