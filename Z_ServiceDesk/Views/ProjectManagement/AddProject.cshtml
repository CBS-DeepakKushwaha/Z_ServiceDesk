<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2 pull-right">
                    <div class="col-md-12 text-lg-right">
                        <button class="btn btn-gradient-primary" id="btnSubmit" onclick="SubmitEvent">Submit</button>
                        <button class="btn btn-gradient-danger" type="button" onclick="location.href='/ProjectManagement/Index'">Cancel</button>
                    </div>
                </div>
                <br />
                <h5></h5>
                <br />


                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Project ID<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtProjectCode" value="">
                                <ul class="parsley-errors-list filled" id="SpnProjectCode" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Project Name<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtProjectName" value="">
                                <ul class="parsley-errors-list filled" id="SpnProjectName" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Project Status<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="select form-control select2" id="ddlProjectStatus" required>
                                    <option value="0">Select</option>
                                </select>
                                <ul class="parsley-errors-list filled" id="SpnProjectStatus" style="display:none">
                                    <li class="parsley-required">This field is required</li>
                                </ul>
                            </div>
                        </div><!-- end col -->
                    </div>
                    </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Project Title<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
  <textarea style="min-height: 60px !important;height:12px !important;background-color:aliceblue;" required="" id="txtProjectTitle" class="form-control"></textarea>
                             </div>
                            </div><!-- end col -->
                        </div>
                </div>
