
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Add.cshtml";
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <button type="button" id="btnNew" class="btn btn-gradient-primary ml-1" onclick="location.href='/Home/Project'" style="margin-top: -8px;"><i class="mdi mdi-monitor-dashboard mr-2"></i>View Dashboard</button>
            </div>
            <h4 class="page-title">ALL PROJECT</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="btn-group">
                    <button type="button" id="btnNew" class="btn btn-gradient-primary btnAddNew" onclick="location.href='/ProjectManagement/AddProject'"><i class="mdi mdi-plus-circle-outline mr-2"></i>New</button>
                </div>
                <div class="btn-group">
                    <button type="button" id="FilterBtn" class="btn btn-gradient-primary" data-toggle="modal" data-target="#ProjectFilter"><i class="mdi mdi-filter mr-2"></i>Filter</button>
                </div>
                <table id="tblSupplierDetails" class="table table-striped table-bordered dt-responsive" style="border-collapse: collapse;margin-top:-0px !important; width: 100%;">
                    <thead>
                        <tr>
                            <th><input id="CheckAll" type="checkbox"></th>
                            <th>Project Id</th>
                            <th>Project Code</th>
                            <th>Project Name</th>
                            <th>Project Category</th>
                            <th>Services Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="VendorFilter" role="dialog" aria-labelledby="myLargeModalLabel" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Vendor Filter</h5>
                <button type="button" id="closeFilter" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Category</label>
                            <div class="col-lg-8">
                                <select class="select2 mb-3 select2-multiple select2-hidden-accessible country" id="ddlSupplierCategory" multiple="" placeholder="Select">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Status</label>
                            <div class="col-lg-8">
                                <select class="select2 mb-3 select2-multiple select2-hidden-accessible country" id="ddlSupllierStatus" multiple="" placeholder="Select">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Location</label>
                            <div class="col-lg-8">
                                <select class="select2 mb-3 select2-multiple select2-hidden-accessible country" id="ddlLocation" multiple="" placeholder="Select">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button style="" class="btn btn-gradient-primary" id="btnFilter">Search</button>
            </div>
        </div>
    </div>
</div>

<!-- Plugins js -->
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="../plugins/moment/moment.js"></script>
<script src="../plugins/daterangepicker/daterangepicker.js"></script>
<script src="../plugins/select2/select2.min.js"></script>
<script src="../plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
<script src="../plugins/timepicker/bootstrap-material-datetimepicker.js"></script>
<script src="../plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
<script src="../plugins/bootstrap-touchspin/js/jquery.bootstrap-touchspin.min.js"></script>
<script src="../assets/pages/jquery.forms-advanced.js"></script>
<script src="~/Scripts/View/Common/WebConfig.js"></script>
<script src="~/Scripts/View/Common/Common.js"></script>
