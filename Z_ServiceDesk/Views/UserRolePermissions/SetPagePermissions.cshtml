<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                @*<ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Masters</a></li>
                        <li class="breadcrumb-item active">Common Category</li>
                    </ol>*@
            </div>
            <h4 class="page-title">PAGE PERMISSIONS</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">User Role </label>
                            <div class="col-lg-7">
                                <select class="select form-control select2" id="ddlUserRole" name="txttype" required>
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">

                    </div>

                    <div class="col-md-4">

                    </div>
                </div>

                <table id="tblPageRolePermissions" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Role</th>
                            <th>Page Name</th>
                            <th>Control Name</th>
                            <th>Visibility</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody id="tblPageRolePermissions_tbody"></tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

<div id="NewRoleModal" class="modal fade bs-example-modal-lg2" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Add User Role</h5>
                <button type="button" id="closedModel" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Role Name *</label>
                            <div class="col-lg-8">
                                <input type="hidden" id="hdnRoleID" value="0">
                                <input type="text" class="form-control" id="txtNewRole" required="" placeholder="" autocomplete="off">
                                <ul class="parsley-errors-list filled" id="SpnNewRole" style="display:none">
                                    <li class="parsley-required">This value is required.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!--end card-body-->
            <div class="modal-footer">
                <button class="btn btn-gradient-primary" id="btnSubmit" type="submit">Add</button>
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>

<div id="EditPopUp" class="modal fade bs-example-modal-lg2" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Edit User Role</h5>
                <button type="button" id="closedModel" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Role Name *</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="txtEditRole" required="" placeholder="" autocomplete="off">
                                <ul class="parsley-errors-list filled" id="SpnEditRole" style="display:none">
                                    <li class="parsley-required">This value is required.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Status *</label>
                            <div class="col-lg-8">
                                <input type="checkbox" class="form-control" id="chkEditStatus" required="" placeholder="" autocomplete="off">
                                <ul class="parsley-errors-list filled" id="SpnchkEditStatus" style="display:none">
                                    <li class="parsley-required">This value is required.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!--end card-body-->
            <div class="modal-footer">
                <button class="btn btn-gradient-primary" id="btnSubmitEdit" type="submit">Update</button>
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>

